<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="5" name="Sanity">
	<listeners>
		<listener class-name="com.opencart.utilities.ExtentReportManager" />
	</listeners>
	<test name="Chrome Browser">
		<parameter name="browserName" value="chrome" />
		<classes>
			<class name="com.opencart.testcases.TCRegisterAccount" />
			<class name="com.opencart.testcases.TCLogin" />
		</classes>
	</test>
	<test name="Edge Browser">
		<parameter name="browserName" value="edge" />
		<classes>
			<class name="com.opencart.testcases.TCRegisterAccount" />
			<class name="com.opencart.testcases.TCLogin" />
		</classes>
	</test>
	<test name="Firefox Browser">
		<parameter name="browserName" value="firefox" />
		<classes>
			<class name="com.opencart.testcases.TCRegisterAccount" />
			<class name="com.opencart.testcases.TCLogin" />
		</classes>
	</test>
</suite>